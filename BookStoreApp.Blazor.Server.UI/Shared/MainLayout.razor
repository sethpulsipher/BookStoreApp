@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<PageTitle>Sethify</PageTitle>



<MudLayout>
    
    @* Top Nav *@
    <MudAppBar>
        @* Hamburger Menu Icon *@
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        
        <MudSpacer></MudSpacer>

        <AuthorizeView>
            <NotAuthorized>
                <MudIconButton Href="/users/login" Class="text-white fs-1">Login</MudIconButton>    
            </NotAuthorized>
                
            <Authorized>

                @* Account *@
                <MudMenu Class="pe-1">
                    <ActivatorContent>
                        <MudAvatar T="string" Size="Size.Medium" Color="Color.Secondary">A</MudAvatar>
                    </ActivatorContent>
                    <ChildContent>
                        <MudMenuItem Href="user/account">Account</MudMenuItem>
                        <MudMenuItem OnClick="@Logout" Class="text-danger">Log Out</MudMenuItem>
                    </ChildContent>
                </MudMenu>

            </Authorized>             
        </AuthorizeView>
           
    
    </MudAppBar>

    @* Side Nav *@
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="1"> 
        <NavMenu/>
    </MudDrawer>
    
    @* Main Content *@
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="body">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>